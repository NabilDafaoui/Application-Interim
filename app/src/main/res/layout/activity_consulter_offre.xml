<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textOfferTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offer Title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:gravity="center"/>

            <TextView
                android:id="@+id/metier_offre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Métier"
                android:textSize="18sp"
                android:textColor="@color/secondary_text"/>

            <TextView
                android:id="@+id/lieu_offre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Lieu"
                android:textSize="18sp"
                android:textColor="@color/secondary_text"/>

            <TextView
                android:id="@+id/description_offre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textSize="18sp"
                android:textColor="@color/secondary_text"/>

            <TextView
                android:id="@+id/date_debut_offre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Date de début"
                android:textSize="18sp"
                android:textColor="@color/secondary_text"/>

            <TextView
                android:id="@+id/date_fin_offre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Date de fin"
                android:textSize="18sp"
                android:textColor="@color/secondary_text"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
