<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titre_offre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre de l'offre"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/metier_offre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Métier"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lieu_offre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Lieu"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/button_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/plus" />

    </LinearLayout>

    <TextView
        android:id="@+id/description_offre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description de l'offre"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_debut_offre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de début"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/date_fin_offre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Date de fin"
            android:textColor="@android:color/black"
            android:visibility="gone" />


    </LinearLayout>
    <Button
        android:id="@+id/button_candidater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Candidater"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/light_grey"
        android:visibility="gone" />
</LinearLayout>
